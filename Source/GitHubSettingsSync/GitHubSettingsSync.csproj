<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <EnableConfigurationBindingGenerator>true</EnableConfigurationBindingGenerator>
    <Aot>true</Aot>
    <EnableReflection>true</EnableReflection>
  </PropertyGroup>

  <PropertyGroup>
    <Description>GitHubの設定を同期するアプリケーションです。</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>GitHub;settings;sync</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ConsoleAppFramework" Version="4.2.4" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0-preview.7.23375.6" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0-preview.7.23375.6" />
    <PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" Version="8.0.0-preview.7.23375.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\GitHubSettingsSync.Models\GitHubSettingsSync.Models.csproj" />
    <ProjectReference Include="..\GitHubSettingsSync.Repositories\GitHubSettingsSync.Repositories.csproj" />
    <ProjectReference Include="..\GitHubSettingsSync.Services\GitHubSettingsSync.Services.csproj" />
  </ItemGroup>

  <ItemGroup>
    <TrimmerRootDescriptor Include="Roots.xml" />
  </ItemGroup>

  <Import Project="$(BuildCommonDirectory)Exe.props" />

</Project>
